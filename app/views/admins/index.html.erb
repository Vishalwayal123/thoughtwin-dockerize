<style type="text/css">
  .blog-nav{
    margin: 1% 0%;
  }
  .blog-nav ul{
    padding: 10px 0px;
  }
  .blog-nav ul li a{
    color: #000!important;
  }
  .blog-nav ul li a:hover{
      color: red!important;
      background-color: transparent!important;
  }
  .blog-nav .nav-item .nav-link{
    color: #000!important;
  }
  .blog-nav ul li{
    padding:10px 0px 10px 0px;
    margin-right: 35px;
    border-bottom: 2px solid transparent;
  }
  .blog-nav .nav-item:after{
    background: transparent;
  }
  .nav-height {
    height: calc(100vh - 360px);
  }
  .nav-height li:hover{
    border-bottom: 2px solid red;
  }
  .user-uploadimg img{
    width: 100%;
    object-fit: cover;
  }
