<div class="container">
 	<div class="col-md-12">
		<div class="forgot-formbox">
			<h2 class="text-left mb-5">Forgot your password?</h2>
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= render "devise/shared/error_messages", resource: resource %>
			  <div class="field" style="position: relative;">
			    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "Email"%>
			  </div>
			  <div class="actions">
			    <%= f.submit "Send me reset password instructions" %>
			  </div>
			<% end %>
		</div>
	</div>
</div>
<style type="text/css">
	.forgot-formbox{
		position: relative;
		margin-top: 15%;
	}
	.forgot-formbox h2{
		color: #000;
	}
	.forgot-formbox .actions{
		width: 37%;
	    padding: 20px;
	    margin: 0 auto;
	}
	.forgot-formbox .actions input{
		padding: 15px 20px;
		background-image: linear-gradient(to right, rgba(213, 63, 168, 1) 0%, rgba(239, 110, 59, 1) 100%) !important;
		border: 0;
		margin: 20px 0px 20px 0px;
		text-shadow: none;
	}
	.field_with_errors{
		width: 100%;
	}
</style>