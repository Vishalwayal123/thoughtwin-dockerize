<section class="common-btndiv pb-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p id="notice"><%= notice %></p>
        <h1>Support Emails</h1>
      </div>
      <div class="col-md-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Email</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @support_emails.each do |support_email| %>
              <tr>
                <td><%= support_email.email %></td>
                <td><%= link_to 'Show', support_email,class: "show-link" %></td>
                <td><%= link_to 'Edit', edit_support_email_path(support_email) ,class: "edit-link"%></td>
                <td><%= link_to 'Destroy', support_email, method: :delete, data: { confirm: 'Are you sure?' },class: "delete-link" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New Support Email', new_support_email_path ,class: "btn submit-btn"%>
      </div>
    </div>
  </div>
</section>
<style type="text/css">
  h1{
    color: #000000!important;
    font-weight: 600;
    font-size: 40px;
    padding: 13% 0 4% 0;
  }
  table thead tr th{
    color: #000;
    font-size: 15px;
    font-weight: 500;
  }
  table tbody tr td{
    color: #575757;
    text-transform: capitalize;
  }
  .show-link{
    color: green!important;
  }
  .edit-link{
    color: blue!important;
  }
  .delete-link{
     color: red!important;
  }
  .common-btndiv .submit-btn{
    width: 18%;
    padding: 14px 0;
    margin: 16px auto 40px;
    text-align: center;
    color: #fff;
    font-weight: 500;
  }
</style>