<section class="blogs-section pb-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Blogs</h1>
      </div>
      <div class="col-md-12">
       <table class="table  table-bordered mb-5">
        <thead>
          <tr>
            <th>Title</th>
            <th>Subject</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Blogger</th>
            <th>Blogger image</th>
            <th>Blogger department</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= blog.subject %></td>
              <td><%= blog.question %></td>
              <td><%= blog.answer %></td>
              <td><%= blog.blogger %></td>
              <td><%#= image_tag(blog.blogger_image.url,size: 10*10)%></td>
              <td><%= blog.blogger_department %></td>
              <td><%= link_to 'Show', blog ,class: "show-link"%></td>
              <td><%= link_to 'Edit', edit_blog_path(blog),class: "edit-link" %></td>
              <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete-link"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</section>

<style type="text/css">
  h1{
    color: #000000!important;
    font-weight: 600;
    font-size: 40px;
    padding: 13% 0 4% 0;
  }
  table thead tr th{
    color: #000;
    font-size: 15px;
    font-weight: 500;
  }
  table tbody tr td{
    color: #575757;
    text-transform: capitalize;
  }
  .show-link{
    color: green!important;
  }
  .edit-link{
    color: blue!important;
  }
  .delete-link{
     color: red!important;
  }
  .table thead th{
    vertical-align: middle;
  }
</style>