<section class="blog-form pb-5 common-btndiv pad carrer_pagenew">
  <div class="container">
    <%= form_for @carrer do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <div class="field">
              Title: <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <div class="field">
              Experience: <%= f.text_field :time_duration, placeholder: "Time", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <div class="field">
              Descreption: <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
       <div class="actions text-center">
        <%= f.submit class: "btn submit-btn submit-btncarrer submit-btnnew"%>
      </div>
    <% end %>
  </div>
</section>
